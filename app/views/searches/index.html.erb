<div class='container w-75'>
  <h2>Results index</h2>
  <div class="row">
    <table class="table">
       <% if @range == "User" %>
         <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
            <td><%= user.name %></td>
          </tr>
          <% end %>
         </tbody>
       <% else %>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>