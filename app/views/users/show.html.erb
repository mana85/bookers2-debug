<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <div class='mt-3 mb-3'>
        <!--DM送れるようになる-->
        <% unless @user.id == current_user.id %>
          <% if (current_user.following?(@user)) && (@user.following?(current_user)) %>
            <% if @isRoom == true %>
              <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-sm">チャットへ</a>
            <% else %>
              <%= form_for @room do |f| %>
                <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "チャットを始める", class:"btn btn-primary btn-sm user-show-chat"%>
              <% end %>
            <% end %>
            <% end %>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <div>
        <h3>投稿数の前日比・前週比</h3>
        <!--前日比-->
        <table class="table table-bordered">
          <tr>
            <td>今日の投稿数</td>
            <td>前日の投稿数</td>
            <td>前日比</td>
          </tr>
          <tr>
            <td><%= @todayBooks %></td>
            <td><%= @yestBooks %></td>
            <td><%= @dayBefore %></td>
          </tr>
        </table>
        <!--前週比-->
        <table class="table table-bordered">
          <tr>
            <td>今週の投稿数</td>
            <td>先週の投稿数</td>
            <td>前週比</td>
          </tr>
          <tr>
            <td><%= @thisWeekBooks %></td>
            <td><%= @lastWeekBooks %></td>
            <td><%= @weekBefore %></td>
          </tr>
        </table>
      </div>

      <div>
        <!--日別の投稿数-->
        <h3>過去7日分の日別投稿数</h3>
        <table class="table table-bordered">
          <tr>
            <td>6日前</td>
            <td>5日前</td>
            <td>4日前</td>
            <td>3日前</td>
            <td>2日前</td>
            <td>1日前</td>
            <td>今日</td>
          </tr>
          <tr>
            <% @dailyBookCounts.each do |count| %>
              <td><%= count %></td>
            <% end %>
          </tr>
        </table>
        <!--チャート-->
        <canvas id="myChart" width="200" height="100"></canvas>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
          var ctx = document.getElementById("myChart").getContext('2d');
          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ["6日前", "5日前", "4日前", "3日前", "2日前", "1日前", "今日"],
              datasets: [{
                label: '投稿数',
                data: <%= @dailyBookCounts %>,
                backgroundColor: 'rgba(192, 192, 192, 1.0)',
                borderColor: 'rgba(128, 128, 128, 1.0)',
                lineTension: 0.3,
                fill: false
              }]
            },
            options: {
              scales: {
                "yaces_1": {
                  beginAtZero: true,
                  max: 10,
                  min: 0,
                }
              }
            }
          });
        </script>
      </div>

    </div>
  </div>
</div>
